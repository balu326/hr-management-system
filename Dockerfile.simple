# Simple Dockerfile using Vite's preview server
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm ci

# Copy source code
COPY . .

# Fix permissions
RUN chmod +x node_modules/.bin/*

# Build the application
RUN npm run build

# Expose port
EXPOSE 4173

# Start Vite preview server
CMD ["npx", "vite", "preview", "--host", "0.0.0.0", "--port", "4173"]